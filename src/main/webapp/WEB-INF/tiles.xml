<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<!-- tiles definition - опис атрибутів веб сторінок -->
<tiles-definitions>
	
	<definition name="homePage" template="/view/base/layout.jsp">
		<put-attribute name="header" value="/view/base/header.jsp"></put-attribute>
		<put-attribute name="body" value="/view/base/body.jsp"></put-attribute>
		<put-attribute name="footer" value="/view/base/footer.jsp"></put-attribute>
	</definition>

	<definition name="registrationPage" extends="homePage">
		<put-attribute name="body" value="/view/bodyRegistration.jsp"></put-attribute>
	</definition>
	
	<definition name="productsPage" extends="homePage">
		<put-attribute name="body" value="/view/bodyProducts.jsp"></put-attribute>
	</definition>
	
</tiles-definitions>
